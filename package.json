{
  "name": "vscode-ex",
  "displayName": "Code Assistant",
  "description": "Code Assistant extension for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-assistant.showFileTree",
    "onCommand:code-assistant.showEditorWebview",
    "onView:code-assistant.showSidebarWebView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeAssistantContainer",
          "title": "Code Assistant", 
          "icon": "media/icon.svg" 
        }
      ]
    },
    "views": {
      "codeAssistantContainer": [
        {
          "id":"code-assistant.showSidebarWebView",
          "name":"Sidebar Webview",
          "type": "webview"
        }
      ]
    
    },
    "commands": [
      {
        "command": "code-assistant.showFileTree",
        "title": "Show File tree",
        "category": "Code Assistant"
      },
      {
        "command": "code-assistant.showEditorWebview",
        "title": "Editor Webview",
        "category": "Code Assistant"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint ./src",
    "test": "vscode-test",
    "start": "node ./backend/server.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
